<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.62"
        tools:context="com.example.tanxiaokao.brainwave.Jaraph">

        <com.jonas.jgraph.graph.JcoolGraph xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sug_recode_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tongji"
            android:clickable="true"
            android:paddingRight="5dp"
            app:graphstyle="line"
            app:showymsg="true" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.76">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="平均水平" />

            <TextView
                android:id="@+id/text1_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_title"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="样本/抽样个数" />

            <TextView
                android:id="@+id/text2_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2_title"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="总体表现" />

            <TextView
                android:id="@+id/text3_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3_title"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.23"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/But_selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/jaraph" />

        <TextView
            android:id="@+id/jaraph_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计" />


    </LinearLayout>
</LinearLayout>