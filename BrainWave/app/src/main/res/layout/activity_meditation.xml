<?xml version="1.0" encoding="utf-8"?>
<com.example.tanxiaokao.brainwave.VerticalSwipe
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_meditation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tanxiaokao.brainwave.MainActivity">
    <!--固定布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="@color/AppThemeColor">

    <com.example.tanxiaokao.brainwave.ColorArcProgressBar
            android:id="@+id/bar_meditation"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="150dp"
            android:fromAlpha="0.1"
            android:toAlpha="1"
            app:back_color="@android:color/darker_gray"
            app:back_width="2dp"
            app:front_color1="#e99173"
            app:front_color2="#d7ba39"
            app:front_color3="#7ce976"
            app:front_width="10dp"
            app:is_need_content="true"
            app:is_need_title="true"
            app:is_need_unit="true"
            app:max_value="100"
            app:string_title=""
            app:string_unit="冥想度"
            app:total_engle="270" />

        <TextView
            android:id="@+id/text_meditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="60sp"
            android:transformPivotX="16dp" />
        <ImageButton
            android:id="@+id/but_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question"
            android:background="#00000000"
            android:layout_alignRight="@id/bar_meditation"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>
    <!--可滑动布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="503dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="@color/white">

        <ListView
            android:id="@+id/listView_meditation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </RelativeLayout>
</com.example.tanxiaokao.brainwave.VerticalSwipe>
